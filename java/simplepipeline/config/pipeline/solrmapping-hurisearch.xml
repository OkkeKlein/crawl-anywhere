<?xml version="1.0" encoding="utf-8"?>
<solrmappings>
	<mapping source="source_id"                         target="sourceid" />
	<mapping source="source_name"                       target="source,source_facet" />
	<mapping source="source_country"                    target="country"                                normalization="lowercase"/>
	<mapping source="country_tandis"                    target="country_tandis"                         normalization="lowercase"/>
	<mapping source="item_language"                   	target="language"                               normalization="lowercase"/>
	<mapping source="source_collections" 		        target="collection"                             normalization="lowercase"/>
	<mapping source="source_collections" 		        target="collection_facet"                       normalization="lowercase" split="," />
	
	<mapping source="item_id"                           target="id" />
	<!--
	<mapping source="item_contenttype"                  target="contentType" />
	<mapping source="item_contenttyperoot"              target="contenttyperoot" />
	-->
	<mapping source="item_contenttyperoot"              target="contentType"                            normalization="lowercase"/>
	<mapping source="item_contenttyperoot"              target="contentType_prefered"                   normalization="lowercase"/>
	<mapping source="summary"  	                        target="summary" />
	<mapping source="item_firstcrawldate"  	            target="createtime" />

	<!-- enable if the jteam spacial plugin is installed and configured
	<mapping source="latitude"  	                    target="lat" />
	<mapping source="longitude"  	                    target="lng" />
    -->
 
	<mapping source="parser_title"                      target="title" />
	<mapping source="text"                      		target="content" />

	<mapping source="item_language,text" 				target="content_ml,content_mls"     format="[%1$s]%2$s">
		<condition source="item_language" type="in">en,fr,ar,ru,da,nl,fi,de,hu,it,no,ro,es,pt,sv,tr</condition>
	</mapping>
	<mapping source="item_language,text" 				target="content_ml"                 format="[%1$s]%2$s">
		<condition source="item_language" type="not_in">en,fr,ar,ru,da,nl,fi,de,hu,it,no,ro,es,pt,sv,tr</condition>
	</mapping>

	<mapping source="item_language,parser_title"      	target="title_ml,title_mls"         format="[%1$s]%2$s" >
		<condition source="item_language" type="in">en,fr,ar,ru,da,nl,fi,de,hu,it,no,ro,es,pt,sv,tr</condition>
	</mapping>
	<mapping source="item_language,parser_title"      	target="title_ml"                   format="[%1$s]%2$s" >
		<condition source="item_language" type="not_in">en,fr,ar,ru,da,nl,fi,de,hu,it,no,ro,es,pt,sv,tr</condition>
	</mapping>

	<mapping source="item_language,parser_title,text" 	target="text_ml,text_mls"     format="[%1$s]%2$s %3$s">
		<condition source="item_language" type="in">en,fr,ar,ru,da,nl,fi,de,hu,it,no,ro,es,pt,sv,tr</condition>
	</mapping>
	<mapping source="item_language,parser_title,text" 	target="text_ml"                 format="[%1$s]%2$s %3$s">
		<condition source="item_language" type="not_in">en,fr,ar,ru,da,nl,fi,de,hu,it,no,ro,es,pt,sv,tr</condition>
	</mapping>

</solrmappings>