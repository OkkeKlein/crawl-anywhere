html, body, td {
    font-family: Arial, Verdana, Helvetica, Geneva, sans-serif;   
    font-size: 0.9em;
    background: #ffffff ;
    margin: 10px 0 ;
    padding: 0 ;
    #text-align: center ;
}

img {
	border : 0;
	}

div#conteneur {
    width:990px; 
    margin:0 auto;  
    text-align: left ;
    background: #ffffff ;
}

div#header1 {
	position: absolute;
	top: 0px;
    width:990px; 
    margin:0;  
    text-align: center ;
    background: #ffffff ;
}

div#header2 {
	/*position: absolute;
	top: 0px;*/
    width:990px; 
    margin:0;  
    text-align: left ;
    background: #dddddd ;
}
div#header2 table {
    width:100%; 
}
div#header2 td {
    background: #dddddd ;
}
div#header2 td.align_left
{
	width:50%; 
	text-align: left ;  
}
div#header2 td.align_right
{
	width:50%; 
	text-align: right ;  
}

div#accroch {
    font-size: 1.1em;
    font-weight: bold;   
    width:990px; 
    margin:20px;  
    text-align: center ;
    background: #ffffff ;
}

div#footer {
    width:990px; 
    margin:0;  
    text-align: center ;
    background: #ffffff ;
}

div#logo {
    width:100%; 
    margin:10px 10px 10px 10px;  
    background: #ffffff ;
}

div#search {
    #background-color: lightgrey;   
    text-align: center ;
}

div#form {
	margin:0 auto;  
	width:650px; 
    text-align: left ;
}
div#form .crit_label {
	width: 120px;
    font-weight: bold;   
    padding: 2px 10px 0 0;
}
div#form td.nowrap
{
	white-space:nowrap;
}

div#formswitcher
{
    text-align: right ;
	background-color: #f4f4f4 ;
}
div#formconteneur
{
	background-color: #f4f4f4 ;
}

div#formconteneur td
{
	background-color: #f4f4f4 ;
}

pre
{
    overflow: auto ;
}

div#contenu h2
{
    padding-left: 5px ;
    line-height: 25px ;
    font-size: 1.4em ;
    color: #9b2 ;
    border-bottom: 1px solid #9b2 ;
}

div#contenu h2 img
{
    border : 0;
}

div#search_results_ajax {overflow:hidden;} 
div#facets {float:left; width:190px;} 
div#results {margin-left:200px;}

div#results .count
{
	font-weight: bolder;
}

div#results .summary
{
    font-style: italic;
}

div#results .link
{
	font-weight: bolder;
}

div#results .mnemo
{
	font-weight: bolder;
}

.highlighted
{
	color: red;
}

div#facets ul
{
	list-style-type: none;
	margin: 0;
	padding: 0;
}

div#facets .facet
{
	font-weight: bolder;
	padding: 0 5px;
	
	/*
	background-color: lightgrey;
	border: solid 1px #555;
	*/
}

div#facets .facetitems
{
	border-top: solid 2px #000;
}

div#facets .facetitem
{
	font-weight: normal;
	padding: 4px 0 0 0;
	/*	
	background-color: lightgrey;
	border-right: solid 1px #555;
	*/
	color: #000;
	margin: 0 0 0 5px;
	
}

div#facets a:link {
	color: #000;
	text-decoration:none;
}

div#facets a:visited {
	color: #000;
	text-decoration:none;
}

div#facets a:hover {
	color: #000;
	background-color:lightgrey;
	}


